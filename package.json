{
  "name": "sennheiser-evolutionwireless",
  "version": "2.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "husky",
    "format": "prettier -w .",
    "package": "yarn build && companion-module-build",
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
    "lint": "yarn lint:raw ."
  },
  "license": "MIT",
  "devDependencies": {
    "@companion-module/tools": "^2.6.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "prettier": "@companion-module/tools/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitfocus/companion-module-sennheiser-evolutionwireless.git"
  },
  "dependencies": {
    "@companion-module/base": "~1.11.0"
  }
}
